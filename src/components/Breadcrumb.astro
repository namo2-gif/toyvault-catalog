---
// @ts-nocheck
const { items } = Astro.props;
---

<nav class="breadcrumb" aria-label="Breadcrumb">
  <ol class="breadcrumb-list">
    {items.map((item, index) => (
      <li class="breadcrumb-item">
        {item.href ? (
          <>
            <a href={item.href} class="breadcrumb-link">{item.label}</a>
            {index < items.length - 1 && <span class="breadcrumb-separator">â€º</span>}
          </>
        ) : (
          <span class="breadcrumb-current">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumb {
    margin-bottom: var(--space-md);
  }

  .breadcrumb-list {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumb-link {
    color: var(--gray);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color var(--transition);
  }

  .breadcrumb-link:hover {
    color: var(--primary);
  }

  .breadcrumb-current {
    color: var(--dark);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .breadcrumb-separator {
    color: var(--gray);
  }

  @media (max-width: 768px) {
    .breadcrumb {
      margin-bottom: var(--space-sm);
    }
    .breadcrumb-link,
    .breadcrumb-current {
      font-size: 0.8125rem;
    }
  }
</style>